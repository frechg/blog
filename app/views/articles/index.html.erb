<h1>Articles</h1>

<p><%= Article.public_count %> articles and <%= Comment.public_count %> comments.</p>
<%= link_to "New Article", new_article_path %>
<ul>
  <% @articles.each do |article| %>
    <% unless article.archived? %>
      <li>
        <a href="<%= article_path(article) %>">
          <h3><%= article.title %></h3>
        </a>
      </li>
    <% end %>
  <% end %>
</ul>
