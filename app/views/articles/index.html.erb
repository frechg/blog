<header class="content-header">
  <h1>Articles</h1>
  <p>
  <%= Article.public_count %> <%= 'article'.pluralize(Article.public_count) %> with <%= Comment.public_count %> <%= 'comment'.pluralize(Comment.public_count) %>
  </p>
</header>
<section class="article-list">
  <% @articles.each do |article| %>
    <% unless article.archived? %>
      <article class="preview">
        <a href="<%= article_path(article) %>">
          <h3><%= article.title %></h3>
          <p></p>
        </a>
      </article>
    <% end %>
  <% end %>
</section>
